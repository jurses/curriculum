<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="view" prefHeight="490.0" prefWidth="588.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <rowConstraints>
      <RowConstraints maxHeight="323.0" minHeight="10.0" prefHeight="32.0" vgrow="ALWAYS" />
      <RowConstraints maxHeight="462.0" minHeight="10.0" prefHeight="458.0" vgrow="ALWAYS" />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" maxWidth="505.0" minWidth="10.0" prefWidth="501.0" />
      <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="206.0" minWidth="0.0" prefWidth="87.0" />
   </columnConstraints>
   <children>
      <TableView fx:id="tableExperiencia" prefHeight="200.0" prefWidth="200.0" GridPane.rowSpan="2">
        <columns>
          <TableColumn fx:id="columnDesde" prefWidth="75.0" text="Desde" />
          <TableColumn fx:id="columnHasta" prefWidth="75.0" text="Hasta" />
            <TableColumn fx:id="columnDenominacion" prefWidth="95.0" text="Denominación" />
            <TableColumn fx:id="columnEmpleador" prefWidth="100.0" text="Empleador" />
        </columns>
      </TableView>
      <Button fx:id="btnAgregar" mnemonicParsing="false" onAction="#agregarExperiencia" text="Añadir" GridPane.columnIndex="1" GridPane.valignment="TOP" />
      <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#eliminarConocimiento" text="Eliminar" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="TOP" />
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</GridPane>
